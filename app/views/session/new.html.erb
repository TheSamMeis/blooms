

<div id='signupbg'>
 
  <div id='whiteform' class='login'>

    <div id='formhead'> 
        Log In to Manage Your Account
    </div>
    <div id='formsubhead'>
      Subscriptions, Billing, and Shipping Information 
    </div>
 <div id="signupform">

<p id="notice"><%= flash[:notice] %></p>
 <%= form_tag do %>



  <div class="field">
    <%= label_tag :email, 'Email' %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions" style="position: relative; left:90px;">
    <%= submit_tag("Log In", class: "button")  %>
  </div>
<% end %>
  <div id='no_account_link'>
 <a href='/signup'> Don't have an account? Sign up here. </a>
  </div>
</div>
</div>
</div>
